{
  "name": "vrms-server",
  "version": "0.3.0",
  "description": "VRMS Server",
  "scripts": {
    "start": "concurrently \"cd backend && npm run start\" \"cd client && npm run start\"",
    "dev:api": "cd backend && npm run dev",
    "dev:client": "cd client && npm run start",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "cy:run": "cypress run",
    "test:cy": "NODE_ENV=test start-test dev:api 4000 dev:client 3000 cy:run",
    "test:backend": "cd backend && npm run test",
    "test:client": "cd client && npm run test",
    "test:all": "npm run test:client && npm run test:backend && npm run test:cy"
  },
  "dependencies": {
    "concurrently": "^5.3.0"
  },
  "proxy": "http://127.0.0.1:4000/",
  "devDependencies": {
    "cypress": "^5.0.0",
    "start-server-and-test": "^1.11.3"
  }
}
